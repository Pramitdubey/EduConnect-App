<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/color_splash">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners">

            <ImageView
                android:id="@+id/iv_teacher_profile_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/blank_profile_pic"
                android:contentDescription="Teacher Profile Picture"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_teacher_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject "
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_teacher_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email "
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_teacher_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_add_teacher"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ADD TEACHER TO CHATS"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                style="@style/myButton"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/teacher_profile_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:contentDescription="Open Teacher's Location in Map"
        android:src="@drawable/baseline_location_pin_24"
        />

</RelativeLayout>

